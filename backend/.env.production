# Production Environment Configuration for CargwinNewCar
# Copy this file to .env and fill in your production values

# Environment
ENVIRONMENT=production
DEBUG=false

# Database - Replace with your production MongoDB URL
MONGO_URL=mongodb://your-mongo-host:27017
DB_NAME=cargwin_production

# Security - CRITICAL: Generate secure random keys!
SECRET_KEY=CHANGE-THIS-TO-SECURE-RANDOM-STRING-AT-LEAST-32-CHARS
JWT_SECRET_KEY=CHANGE-THIS-TO-ANOTHER-SECURE-RANDOM-STRING

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
MAGIC_LINK_EXPIRE_MINUTES=15

# CORS - Set your actual domain
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Frontend URL - Your production frontend URL
FRONTEND_URL=https://yourdomain.com

# File Upload
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760

# Email Configuration for Magic Links
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
EMAIL_FROM=noreply@yourdomain.com

# Admin Users - Comma-separated list of admin emails
ADMIN_EMAILS=admin@yourdomain.com,owner@yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
WORKERS=4
MAX_CONNECTIONS=100

# CDN (Optional) - For serving static files
CDN_URL=https://cdn.yourdomain.com
STATIC_URL=/static

# Monitoring (Optional) - For error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Redis (Optional) - For caching and sessions
REDIS_URL=redis://localhost:6379/0

# Disable docs in production
DOCS_ENABLED=false